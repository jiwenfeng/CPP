include ../../xxsq.mk

C_FILE = $(wildcard *.cc )
OBJ_FILE = $(patsubst %.cc, %.o, $(C_FILE))
OUT_FILE = ./center.a

COMP_INC = $(CENTER_JOINT_INC) $(CENTER_RANDNPC_INC) $(CENTER_MATE_INC) $(CENTER_GODCRAFT_INC) $(CENTER_LOG_INC) $(CENTER_SECT_INC) $(CENTER_ARENA_INC) $(CENTER_SIEGE_INC) $(CENTER_EXPLORE_INC) $(CENTER_RAID_INC) $(CENTER_FAMILY_INC) $(CENTER_TEAM_INC) $(CENTER_TIMER_INC) $(CENTER_CITY_INC) $(CENTER_RANK_INC) $(CENTER_BOSS_INC) $(CENTER_FRIENDS_INC) $(CENTER_CACHE_INC) $(CENTER_CHAT_INC) $(CENTER_MAIL_INC) $(CENTER_POLL_ACTIVITY_INC) $(CENTER_CYCLE_INC) $(CENTER_DEVIL_INC) $(CENTER_ILLEGAL_PATH) $(CENTER_LINK_LUA_INC) $(SCENE_INC) $(ROLE_INC) $(CONFIG_INC) $(NAVMESH_INC) $(BASE_INC) $(PB_INC) $(PROTOC_INC) $(AMTSVR_INC) $(CENTER_NOTICE_INC) $(CENTER_ILLEGAL_WORD_INC)
COMP_LIB = $(CENTER_JOINT_LIB) $(CENTER_RANDNPC_LIB) $(CENTER_MATE_LIB) $(CENTER_GODCRAFT_LIB) $(CENTER_LOG_LIB) $(CENTER_SECT_LIB) $(CENTER_ARENA_LIB) $(CENTER_SIEGE_LIB) $(CENTER_EXPLORE_LIB) $(CENTER_RAID_LIB) $(CENTER_FAMILY_LIB) $(CENTER_TEAM_LIB) $(CENTER_RANK_LIB) $(CENTER_TIMER_LIB) $(CENTER_CITY_LIB) $(CENTER_BOSS_LIB) $(CENTER_FRIENDS_LIB) $(CENTER_CACHE_LIB) $(CENTER_CHAT_LIB) $(CENTER_MAIL_LIB) $(CENTER_POLL_ACTIVITY_LIB) $(CENTER_DEVIL_LIB) $(CENTER_CYCLE_LIB) $(CENTER_ILLEGAL_LIB) $(CENTER_LINK_LUA_LIB) $(SCENE_LIB) $(ROLE_LIB) $(CENTER_NOTICE_LIB) $(CENTER_ILLEGAL_WORD_LIB) $(CONFIG_LIB) $(NAVMESH_LIB) $(BASE_LIB) $(PB_LIB) $(PROTOC_LIB) -lpthread -lz

all:$(OUT_FILE)
$(OUT_FILE): $(OBJ_FILE)
	$(AR) rc $(OUT_FILE) $(OBJ_FILE)
	
%.o:%.cc
	$(CXX) $(C_ARGS) -o $@ $(COMP_INC) -c $<
	
clean:
	rm -f $(OUT_FILE) $(OBJ_FILE)
